<?xml version="1.0" encoding="UTF-8" ?>
<popup:BasePopup
    x:Class="Quick.Order.Native.Popups.PlaceOrderPopup"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Quick.Order.Native.Controls"
    xmlns:popup="clr-namespace:MalikBerkane.MvvmToolkit.Popup;assembly=MalikBerkane.MvvmToolkit"
    xmlns:toolkit="http://xamarin.com/schemas/2020/toolkit">
    <StackLayout Padding="20" BackgroundColor="White">
        <Label Text="{toolkit:Translate Total, StringFormat='{0}:'}" />



        <Label Style="{StaticResource AppFontBold}" TextColor="{StaticResource Primary}">
            <Label.Text>
                <MultiBinding StringFormat="{}{0} {1}">
                    <Binding Path="Order.OrderTotalPrice" />
                    <Binding Path="Restaurant.Currency.Symbol" />
                </MultiBinding>

            </Label.Text>

        </Label>

        <StackLayout Margin="0,20">
            <Entry Placeholder="{toolkit:Translate NameForCommand}" Text="{Binding Order.ClientName}" />
            <Entry Placeholder="{toolkit:Translate TableNumber}" Text="{Binding Order.TableNumber}" />
        </StackLayout>


        <controls:QuickOrderButton Command="{Binding PlaceOrderCommand}">
            <Label Style="{StaticResource ButtonLabelStyle}" Text="{toolkit:Translate ValidateOrder}" />
        </controls:QuickOrderButton>

    </StackLayout>
</popup:BasePopup>