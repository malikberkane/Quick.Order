<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quick.Order.Native.Views.BackOfficeHomePage"
             Title="{Binding Title}"
             xmlns:communityToolkit="http://xamarin.com/schemas/2020/toolkit"
             xmlns:local="clr-namespace:Quick.Order.Native.ViewModels"  
             xmlns:model="clr-namespace:Quick.Order.Native.Models"  
             NavigationPage.HasNavigationBar="False"
             x:Name="CurrentPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddItemCommand}" />
    </ContentPage.ToolbarItems>
    <!--
      x:DataType enables compiled bindings for better performance and compile time validation of binding expressions.
      https://docs.microsoft.com/xamarin/xamarin-forms/app-fundamentals/data-binding/compiled-bindings
    -->

    <communityToolkit:TabView 
                             
                              IsSwipeEnabled="False"
                              IsTabTransitionEnabled="False"
                              TabStripBackgroundColor="LightGray"
                              TabStripBorderColor="Gray"
                              TabStripPlacement="Bottom">
        <communityToolkit:TabViewItem 
                                      Text="Accueil">
         
                <CollectionView x:Name="ItemsListView"
                                ItemsSource="{Binding Items}"
                                SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Padding="10">
                                <Label Text="{Binding Name}"
                                       LineBreakMode="NoWrap"
                                       Style="{DynamicResource ListItemTextStyle}"
                                       FontSize="16" />
                                <Label Text="{Binding Adresse}"
                                       LineBreakMode="NoWrap"
                                       Style="{DynamicResource ListItemDetailTextStyle}"
                                       FontSize="13" />
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:BackOfficeHomePageModel}}, Path=GoToMenuEditionCommand}"
                                                          CommandParameter="{Binding .}">
                                    </TapGestureRecognizer>
                                </StackLayout.GestureRecognizers>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>


        </communityToolkit:TabViewItem>

        <communityToolkit:TabViewItem 
                                      Text="Compte">


            <StackLayout Padding="10">

                <Label Text="{Binding CurrentLoggedAccount.Name}" />
                <Label Text="{Binding CurrentLoggedAccount.Email}" />
                <Label Text="{Binding CurrentLoggedAccount.UserId, StringFormat='User id:{0}'}" />

                <Button Text="se déconnecter"
                        Command="{Binding LogoutCommand}" />
            </StackLayout>
        </communityToolkit:TabViewItem>






    </communityToolkit:TabView>

</ContentPage>
