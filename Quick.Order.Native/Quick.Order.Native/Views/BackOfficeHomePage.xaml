<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quick.Order.Native.Views.BackOfficeHomePage"
             Title="{Binding Title}"
             xmlns:communityToolkit="http://xamarin.com/schemas/2020/toolkit"
             xmlns:views="clr-namespace:Quick.Order.Native.Views"
             x:Name="CurrentPage">

    <!--
      x:DataType enables compiled bindings for better performance and compile time validation of binding expressions.
      https://docs.microsoft.com/xamarin/xamarin-forms/app-fundamentals/data-binding/compiled-bindings
    -->

    <communityToolkit:TabView 
                             
                              IsSwipeEnabled="False"
                              IsTabTransitionEnabled="False"
                              TabStripBackgroundColor="LightGray"
                              TabStripBorderColor="Gray"
                              TabStripPlacement="Bottom">
        <communityToolkit:TabViewItem 
                                      Text="Menu">


            <views:MenuEditionPage />

        </communityToolkit:TabViewItem>


        <communityToolkit:TabViewItem Text="Commandes">
            <CollectionView 
                            ItemsSource="{Binding Orders}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10">
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BindingContext.EditOrderStatusCommand, Source={x:Reference CurrentPage}}" CommandParameter="{Binding .}"></TapGestureRecognizer>
                            </StackLayout.GestureRecognizers>
                            <Label Text="{Binding ClientName}"
                                   LineBreakMode="NoWrap"
                                   FontSize="16" />
                            <Label Text="{Binding OrderDate}"
                                   LineBreakMode="NoWrap"
                                   FontSize="16" />
                            <Label Text="{Binding OrderStatus, StringFormat='Statut: {0}'}"
                                   LineBreakMode="NoWrap"
                                   FontSize="16" />

                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


        </communityToolkit:TabViewItem>

        <communityToolkit:TabViewItem 
                                      Text="Compte">


            <StackLayout Padding="10">

                <Label Text="{Binding CurrentLoggedAccount.Name}" />
                <Label Text="{Binding CurrentLoggedAccount.Email}" />
                <Label Text="{Binding CurrentLoggedAccount.UserId, StringFormat='User id:{0}'}" />

                <Button Text="se déconnecter"
                        Command="{Binding LogoutCommand}" />
            </StackLayout>
        </communityToolkit:TabViewItem>






    </communityToolkit:TabView>

</ContentPage>
