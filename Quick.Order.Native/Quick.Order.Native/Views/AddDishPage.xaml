<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quick.Order.Native.Views.AddDishPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nom" />
            <Entry Text="{Binding DishName}" />
            <Label Text="Description" />
            <Editor Text="{Binding DishDescription}" />
            <Label Text="Prix" />
            <Entry Text="{Binding DishPrice}" Keyboard="Numeric"/>

            <Button Command="{Binding AddDishCommand}"
                    Text="Enregistrer" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>